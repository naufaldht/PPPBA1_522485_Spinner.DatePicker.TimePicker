<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Reservation Text -->
    <TextView
        android:id="@+id/ReservationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pemesanan_tiket_kereta"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginVertical="25dp"
        android:gravity="center" />

    <!-- Username EditText -->
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounder_background">
        <ImageView
            android:id="@+id/iconUsername"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_person_24" />
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Nama"
            android:padding="12dp"
            android:inputType="text"
            android:background="@null"/>
    </LinearLayout>

    <!-- Timer EditText -->
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounder_background">
        <ImageView
            android:id="@+id/iconTimer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_access_time_24" />
        <EditText
            android:id="@+id/timerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Waktu"
            android:focusable="false"
            android:inputType="none" />
    </LinearLayout>

    <!-- Calender EditText -->
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounder_background">
        <ImageView
            android:id="@+id/iconCalender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_calendar_month_24"/>
        <EditText
            android:id="@+id/calenderEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Tanggal"
            android:focusable="false"
            android:inputType="none" />
    </LinearLayout>

    <!-- Location EditText -->
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounder_background">
        <ImageView
            android:id="@+id/iconLocation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_location_pin_24"/>
        <Spinner
            android:id="@+id/destinationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/tujuan"
            android:padding="12dp"
            android:inputType="text"
            android:background="@null"/>
    </LinearLayout>

    <!-- Reservation Button -->
    <Button
        android:id="@+id/reservtionButton"
        android:layout_width="350sp"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="@string/pesan_tiket"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="72dp"/>
</LinearLayout>
